doctype html
html(lang="pt-br")
  head
    link(href='/lib/bootstrap/css/bootstrap.css' rel='stylesheet')
    
    link(href='/stylesheets/sb-admin-2.css' rel='stylesheet')
    script(src='/lib/jquery/jquery-1.9.1.js')
    script(src='/lib/bootstrap/js/bootstrap.js')
    
    title Login
  body
    .container
        
        .row
            .col-md-4.col-md-offset-4
                .login-panel.panel.panel-default
                    .panel-heading
                        h3.panel-title Por favor entrar
                    .panel-body
                        form(role='form' method="POST" action="/login/")
                            fieldset
                                .form-group
                                    input.form-control(placeholder='Usename', name='username', type='text', autofocus='')
                                .form-group
                                    input.form-control(placeholder='Password', name='password', type='password', value='')
                                .checkbox
                                    label
                                        input(name='remember', type='checkbox', value='lembrar')
                                        | Lembrar Username
                                // Change this to a button or input when using this as a form
                                input.btn.btn-lg.btn-success.btn-block(type='submit' value='Entrar')
        .row
            .col-md-4.col-md-offset-4
                - if (messages.info)
                    .message.info
                        span.alert.alert-danger= messages.info